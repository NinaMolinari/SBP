{
    "manifest_version": 3,
    "name":             "Smart Links",
    "version":          "1.12",
    "description":      "Manages URL links",
    "action": {
      "default_popup":  "popup.html",
      "default_title":  "Smart Links"
    },
    "permissions":      [
                          "history",
                          "downloads",
                          "tabs",
                          "storage",
                          "declarativeContent"
    ],
    "background": {
      "service_worker": "background.js"
    }
}