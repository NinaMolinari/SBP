{
    "manifest_version":  3,
    "name":              "Keeping Tabs",
    "version":           "1.13",
    "description":       "Manages URL links",
    "action": {
       "default_popup":  "popup.html",
       "default_title":  "Keeping Tabs"
    },
    "permissions":      [
                         "history",
                         "downloads",
                         "tabs",
                         "bookmarks",
                         "storage",
                         "declarativeContent"
    ],
    "background": {
       "service_worker": "background.js"
    }
}